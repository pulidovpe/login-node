<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Autentificaci√≥n Node</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Perfil de Usuario</h1>
		<a href="/logout" class="btn btn-default btn-sm">Desconectar</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<% if (user.local.email) { %>
						<p>
							<strong>Id</strong>: <%= user._id %><br>
							<strong>Correo</strong>: <%= user.local.email %><br>
							<strong>Clave</strong>: <%= user.local.password %>
						</p>

						<a href="/unlink/local" class="btn btn-default">Desenlazar</a>
               <% } else { %>
                  <a href="/connect/local" class="btn btn-default">Conectar Localmente</a>
               <% } %>

			</div>
		</div>

		<!-- FACEBOOK INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

					<!-- check if the user has this token (is the user authenticated with this social account) -->
               <% if (user.facebook.token) { %>

						<p>
							<strong>Id</strong>: <%= user.facebook.id %><br>
							<strong>Token</strong>: <%= user.facebook.token %><br>
							<strong>Correo</strong>: <%= user.facebook.email %><br>
							<strong>Nombre</strong>: <%= user.facebook.name %>
						</p>

						<a href="/unlink/facebook" class="btn btn-primary">Desenlazar</a>
               <% } else { %>
                  <a href="/connect/facebook" class="btn btn-primary">Conectar con Facebook</a>
               <% } %>

			</div>
		</div>

		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>

					<!-- check if the user has this token (is the user authenticated with this social account) -->
               <% if (user.twitter.token) { %>

						<p>
							<strong>Id</strong>: <%= user.twitter.id %><br>
							<strong>Token</strong>: <%= user.twitter.token %><br>
							<strong>Nombre de Usuario</strong>: <%= user.twitter.username %><br>
							<strong>Nombre</strong>: <%= user.twitter.displayName %>
						</p>

						<a href="/unlink/twitter" class="btn btn-info">Desenlazar</a>
               <% } else { %>
                  <a href="/connect/twitter" class="btn btn-info">Conectar con Twitter</a>
               <% } %>

			</div>
		</div>

		<!-- GOOGLE INFORMATION -->
      <div class="col-sm-6">
         <div class="well">
            <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>

	            <!-- check if the user has this token (is the user authenticated with this social account) -->
               <% if (user.google.token) { %>

	               <p>
	                  <strong>Id</strong>: <%= user.google.id %><br>
	                  <strong>Token</strong>: <%= user.google.token %><br>
	                  <strong>Correo</strong>: <%= user.google.email %><br>
	                  <strong>Nombre</strong>: <%= user.google.name %>
	               </p>

	               <a href="/unlink/google" class="btn btn-danger">Desenlazar</a>
               <% } else { %>
                  <a href="/connect/google" class="btn btn-danger">Conectar con Google</a>
               <% } %>

         </div>
      </div>

	</div>

</div>
</body>
</html>