extends layout
block content
	.main.container
		.well.col-sm-6.col-sm-offset-3.top-space.large-padding
				div.row
					div.col-xs-12.col-sm-8
						h1.fa.fa-sign-in Registrarse
					div.col-xs-12.col-sm-4.text-right
						a.btn.btn-default(href="/")
							span.fa.fa-home Inicio

				if (message.length > 0) 
					div.alert.alert-danger= message

				form(action="/signup" method="post")
					div.form-group
						label(for='email') Email:
						input#email.form-control(type='email', placeholder='name@email.com' name='email')
					div.form-group
						label(for='pw') Password:
						input#pw.form-control(type='password' name='password')
					div.row
						div.col-xs-12.col-sm-6
							button.btn.btn-primary(type='submit') Aceptar
						div.col-xs-12.col-sm-6.text-right
							a.btn.btn-default(href="/login")
								span(class="far fa-user") Ya tengo cuenta